    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guhcostan/jira-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/guhcostan/jira-mcp/issues"
  },
  "homepage": "https://github.com/guhcostan/jira-mcp#readme",
  "keywords": [
    "mcp",
    "jira",
    "model-context-protocol",
    "ai",
    "assistant",
    "automation",
    "atlassian",
    "jira-api"
  ],
  "author": "Gustavo Neves",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.12.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
