{
  "name": "@guhcostan/jira-mcp",
  "version": "2.5.0",
  "description": "Complete MCP server for Jira integration with 36 tools - allows AI assistants to interact with Jira via Model Context Protocol",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "jira-mcp": "build/index.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
